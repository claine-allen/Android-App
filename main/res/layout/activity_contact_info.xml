<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#4CAF50">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="71dp"
            android:layout_height="68dp"
            android:layout_margin="10dp"
            android:src="@drawable/steel_zest_logo_color"  />

        <TextView
            android:id="@+id/textView"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Contact Us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:typeface="monospace" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent"
        android:id="@+id/text"
        android:text="To avail our state of the art facilities you can reach out to us on:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contactInfo"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_below="@id/text"
        android:layout_marginTop="43dp">

        <TextView
            android:id="@+id/phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="252dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:autoLink="phone"
            android:linksClickable="true"
            android:text="7875881368"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:autoLink="phone"
            android:linksClickable="true"
            android:text="7709560559"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="60dp"
            android:autoLink="email"
            android:linksClickable="true"
            android:text="steelzestengineers@gmail.com"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="104dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="http://www.steelzest.com/"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/maps"
            android:layout_width="290dp"
            android:layout_height="25dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="146dp"
            android:autoLink="all"
            android:linksClickable="true"
            android:text="https://maps.app.goo.gl/eigBeCMd2rTaAHFb8"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/phone_call" />

        <ImageView
            android:id="@+id/websitep"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

        <ImageView
            android:id="@+id/emailp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="64dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/email" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="151dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/location" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/socialsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactInfo"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="Follow us on our social media handles:"
        android:textAlignment="center"
        android:textSize="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/socialsText">

        <TextView
            android:id="@+id/LinkedIn"
            android:layout_width="295dp"
            android:layout_height="23dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="19dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="https://www.linkedin.com/company/steel-zest-engineers/"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:layout_marginTop="74dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="https://www.youtube.com/@steelzest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="122dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="https://www.instagram.com/steelzestengineers/"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="178dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="https://www.facebook.com/steelzestengineers/"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/facebookp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="178dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/instagramp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="122dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/instagram" />

        <ImageView
            android:id="@+id/linkedinp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/linkedin" />

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="66dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/youtube" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>